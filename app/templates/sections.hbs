{{page-title "Sections"}}
<div class="container">
  <h2>Gestion des sections</h2>
  <div class="card-body">
      <LinkTo class="btn btn-success" @route="sections.add">Nouvelle section...</LinkTo>
      <LinkTo  class="btn btn-success" @route="sections.addProduct">Nouveau Produit...</LinkTo>

  <table class="table table-striped"><br>
    <tbody>
    {{#each @model as |section|}}
      <tr>
        <td>{{ section.name}}</td>
        <td>{{ section.products.length }}</td>
        <td>
          <LinkTo class="btn btn-secondary btn-sm" @route="sections.edit" @model={{section.id}}><i class="fas fa-edit"></i> </LinkTo>
        <button class="btn btn-secondary btn-sm" {{ action "delete" section }}><i class="far fa-trash-alt"></i></button>
        </td>
      </tr>
    {{/each}}
    </tbody>
  </table>
  </div>
  <LinkTo class="btn btn-dark" @route="board">Tableau de bord</LinkTo>
</div>
{{outlet}}