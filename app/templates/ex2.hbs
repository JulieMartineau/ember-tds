{{page-title "Ex2"}}
<div class='container'>

  <form id='services' style>
    <h1>Services</h1>
    <div class='alert alert-info'>
      <span>Choisissez les élément à inclure</span><br>
      <b>{{plural @model.countActive
                  'Aucun service sélectionné'
                  'service sélectionné'
                  'services sélectionnés'}}</b>
    </div>
  </form>

  <ul class="list-group">
    {{#each @model.services as |service|}}
      <li class="list-group-item {{if service.active 'active' ''}}"
        {{action "toggleActive" service}}>{{service.name}} {{ format-currency service.price '€'}} </li>

    {{/each}}
  </ul><br><hr><br>

  <div class="row">
    <div class="col">
      <h3>Total : {{format-currency @model.sumActive '€'}}</h3>
      <div>
        <div class="input-group">
          <span class="input-group-addon">
            <input type="checkbox" class="ng-valid ng-dirty ng-valid-parse ng-touched">
            <input type="text" class="form-control" placeholder="Code promo">
          </span>
        </div>
     </div>
    </div>
    <div class="col">
      <button type="button" class="btn btn-primary" {{action "toggleVisible" }} >Valider</button>
    </div>
  </div><br>

</div>

{{outlet}}