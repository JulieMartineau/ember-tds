{{page-title "Index"}}
<div class="container">
  <h1>Connexion</h1>
    <form {{action "login" @model on="submit"}}>
      <div class="form-group">
        <label for="exampleInputEmail">Email</label>
        <Input type="email" @value={{@model.email}} class="form-control" placeholder="Votre email"/>
      </div>
      <div class="form-group">
        <label for="exampleInputPassword">Mot de passe</label>
        <Input type="password" @value={{@model.password}} class="form-control" placeholder="Votre mot de passe"/>
      </div>
      <div class="form-check">
        <Input type="checkbox" class="form-check-input" id="exampleCheck"/>
        <label class="form-check-label" for="exampleCheck">Se souvenir de moi</label>
      </div>
      <button type="submit" class="btn btn-primary">Se connecter</button>
  </form>
</div>
{{outlet}}